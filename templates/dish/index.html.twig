{#{% extends 'base.html.twig' %}#}

{% block body %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    <br>
    <h1>WTF, a menu?</h1>
    <div class="container">
        <table class="table table-striped">
            <thead>
            <tr>
                <td>Nr.</td>
                <td>Name</td>
                <td>Description</td>
                <td>Price</td>
                <td>Delete</td>
                <td><a href="{{ path('dish.create') }}">Create</a></td>
            </tr>
            </thead>
            <tbody>
            {% for dish in dishes %}
                <tr>
                    <td>{{ dish.id }}</td>
                    <td><a href="{{ path('dish.show', {id: dish.id}) }}">{{ dish.name }}</a></td>
                    <td>{{ dish.description }}</td>
                    <td>{{ dish.price }}</td>
                    <td><a href="{{ path('dish.delete', {id: dish.id}) }}">Delete</a></td>
                </tr>
            {% endfor  %}
            </tbody>
        </table>

    </div>


{% endblock %}
