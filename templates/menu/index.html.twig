{% extends 'base.html.twig' %}

{% block body %}

    {% for flash in app.flashes('order') %}

        <div class="alert alert-success">
            <h3>{{ flash }}</h3>
        </div>
    {% endfor %}




    <!-- Playlist section -->
    <section class="playlist-section spad">
        <div class="container-fluid">
            <div class="section-title">
                <h2>Food</h2>
            </div>
            <div class="container">
                <ul class="playlist-filter controls">
                    <li class="control" data-filter=".Drinks">Drinks</li>
                    <li class="control" data-filter=".Desert">Desert</li>
                    <li class="control" data-filter=".Apetizers">Apetizers</li>
                    <li class="control" data-filter=".Main Dishes">Main Dishes</li>
                    <li class="control" data-filter="all">All Dishes</li>
                </ul>
            </div>
            <div class="clearfix"></div>
            <div class="row playlist-area">
                {% for dish in dishes %}
                <div class="mix col-lg-3 col-md-4 col-sm-6 {{ dish.category }}">
                    <div class="playlist-item">
                        <img src="{{ asset('images/' ~ dish.image ) }}" alt="">
                        <h5>{{ dish.name }} - EUR {{ dish.price }}</h5>
                        <p>{{ dish.description }}</p>
                        <p><a class="btn btn-outline-danger btn-sm" href={{ path( 'app_order', {id: dish.id} ) }}  >Order</a></p>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </section>
    <!-- Playlist section end -->
{% endblock %}
